<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.AdminMapper">
	<resultMap id="adminMap" type="pojo.Admin">
		<id property="adminId" column="adminid"/>
		<result property="name" column="name"/>
		<result property="passwd" column="passwd"/>
		<result property="salt" column="salt"/>
		<result property="gender" column="gender"/>
		<result property="remark" column="remark"/>
		<result property="regTime" column="reg_time"/>
		<result property="passwd" column="passwd"/>
		<result property="lastOrderID" column="last_order"/>
		<result property="isSuperAdmin" column="is_superadmin"/>
		<result property="phone" column="phone"/>
		<result property="openId" column="openid"/>
		<association property="lastOrder" column="last_order" select="dao.OrderMapper.getOrderByOrderID"/>
	</resultMap>
	<insert id="registerAdmin" parameterType="pojo.Admin" useGeneratedKeys="true" keyProperty="adminId">
		INSERT INTO admins
			(name, passwd, salt, phone, remark, reg_time, last_order, openid)
		VALUES (#{name}, #{passwd}, #{salt}, #{phone}, #{remark}, now(), #{last_order}, #{openid})
	</insert>
	<update id="updatePhone">
		UPDATE admins
		SET phone=#{phone}
		WHERE adminid = #{id}
	</update>
	<update id="updatePasswd">
		UPDATE admins
		SET passwd=#{passwd},
		    salt=#{salt}
		WHERE adminid = #{id}
	</update>
	<update id="updateOpenID">
		UPDATE admins
		SET openid=#{openid}
		WHERE adminid = #{id}
	</update>
	<update id="updateRemark">
		UPDATE admins
		SET remark=#{remark}
		WHERE adminid = #{id}
	</update>
	<update id="updateLastOrder">
		UPDATE admins
		SET last_order=#{orderid}
		WHERE adminid = #{id}
	</update>
	<update id="updateGender">
		UPDATE admins
		SET gender=#{gender}
		WHERE adminid = #{id}
	</update>
	<update id="updateName">
		UPDATE admins
		SET name=#{name}
		WHERE adminid = #{id}
	</update>
	<delete id="deleteAdmin">
		DELETE
		FROM admins
		WHERE adminid = #{id}
	</delete>
	<select id="getAdminByID" resultMap="adminMap">
		SELECT *
		FROM admins
		WHERE adminid = #{id}
	</select>
	<select id="getAdminByName" resultMap="adminMap">
		SELECT *
		FROM admins
		WHERE name = #{name}
	</select>
	<select id="getAdminByPhone" resultMap="adminMap">
		SELECT *
		FROM v_admins
		WHERE phone = #{phone}
	</select>
	<select id="getAdminList" resultMap="adminMap">
		SELECT *
		FROM v_admins
	</select>
	<select id="getAdminByToken" resultMap="adminMap">
		SELECT *
		FROM admins
		WHERE name = #{name}
		  AND passwd = #{passwd}
	</select>
</mapper>