<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.AdminMapper">
    <insert id="registerAdmin" parameterType="pojo.Admin">
        INSERT INTO admins
        (name,passwd,salt,phone,remark,reg_time,last_order,openid)
        VALUES
        (#{name},#{passwd},#{salt},#{phone},#{remark},now(),#{last_order},#{openid})
    </insert>
    <update id="updatePhone">
        UPDATE admins
        SET phone=#{phone}
        WHERE adminid=#{id}
    </update>
    <update id="updatePasswd">
        UPDATE admins
        SET passwd=#{passwd},salt=#{salt}
        WHERE adminid=#{id}
    </update>
    <update id="updateOpenID">
        UPDATE admins
        SET openid=#{openid}
        WHERE adminid=#{id}
    </update>
    <update id="updateRemark">
        UPDATE admins
        SET remark=#{remark}
        WHERE adminid=#{id}
    </update>
    <update id="updateLastOrder">
        UPDATE admins
        SET last_order=#{orderid}
        WHERE adminid=#{id}
    </update>
    <delete id="deleteAdmin">
        DELETE FROM admins WHERE adminid=#{id}
    </delete>
    <select id="getAdminByID" resultType="pojo.Admin">
        SELECT * FROM admins WHERE adminid=#{id}
    </select>
    <select id="getAdminByName" resultType="pojo.Admin">
        SELECT * FROM admins WHERE name=#{name}
    </select>
    <select id="getAdminByPhone" resultType="pojo.Admin">
        SELECT * FROM admins WHERE phone=#{phone}
    </select>
    <select id="getAdminList" resultType="pojo.Admin">
        SELECT * FROM admins
    </select>
    <select id="getAdminByToken" resultType="pojo.Admin">
        SELECT * FROM admins WHERE name=#{name} AND passwd=#{passwd}
    </select>
</mapper>